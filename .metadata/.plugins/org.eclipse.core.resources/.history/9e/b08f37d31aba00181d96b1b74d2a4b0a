package com.jacob.dao.test;

import org.junit.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;

import com.jacob.dao.BlogDAO;
import com.jacob.model.Blog;

import org.junit.Assert;

public class BlogDAOTest {

    private final JdbcTemplate jdbcTemplate;
    BlogDAO blogDao = new BlogDAO(jdbcTemplate);
    
	@Test
	public void testGetBlogById() {
		Blog expected = new Blog(); 
		expected.setId(26);
		expected.setAuthor_id(57);
		expected.setContent("booboo");
		expected.setTitle("boo boo");
		
		Blog actual = blogDao.getBlog(26);
		
		Assert.assertEquals(expected.getContent(), actual.getContent());
	}
}
